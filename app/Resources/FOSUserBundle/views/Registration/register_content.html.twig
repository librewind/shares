{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" name="fos_user_registration_form" method="POST" action="{{ path('fos_user_registration_register') }}">
                        <div class="form-group" id="fos_user_registration_form">
                            <div class="form-group">
                                <label for="fos_user_registration_form_email" class="col-md-4 control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>

                                <div class="col-md-6">
                                    <input id="fos_user_registration_form_email" type="email" class="form-control" name="fos_user_registration_form[email]" value="" required autofocus>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="fos_user_registration_form_username" class="col-md-4 control-label">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>

                                <div class="col-md-6">
                                    <input id="fos_user_registration_form_username" type="text" class="form-control" name="fos_user_registration_form[username]" value="" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="fos_user_registration_form_plainPassword_first" class="col-md-4 control-label">{{ 'form.password'|trans({}, 'FOSUserBundle') }}</label>

                                <div class="col-md-6">
                                    <input id="fos_user_registration_form_plainPassword_first" type="password" class="form-control" name="fos_user_registration_form[plainPassword][first]" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="fos_user_registration_form_plainPassword_second" class="col-md-4 control-label">{{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}</label>

                                <div class="col-md-6">
                                    <input id="fos_user_registration_form_plainPassword_second" type="password" class="form-control" name="fos_user_registration_form[plainPassword][second]" required>
                                </div>
                            </div>

                            {{ form_widget(form._token) }}
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'registration.submit'|trans({}, 'FOSUserBundle') }}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>